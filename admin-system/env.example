# =============================================================================
# iUtility Admin System Environment Configuration
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=iUtility Admin
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:9000/api/v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
VITE_JWT_STORAGE_KEY=iutility_admin_token
VITE_REFRESH_TOKEN_KEY=iutility_admin_refresh_token
VITE_SESSION_TIMEOUT=3600000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_DEVELOPER_TOOLS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
VITE_THEME=light
VITE_LANGUAGE=en
VITE_TIMEZONE=Africa/Banjul
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm:ss

# =============================================================================
# PAGINATION CONFIGURATION
# =============================================================================
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_PAGE_SIZE_OPTIONS=10,25,50,100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
VITE_UPLOAD_ENDPOINT=/admin/upload

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
VITE_NOTIFICATION_DURATION=5000
VITE_NOTIFICATION_POSITION=top-right
VITE_ENABLE_SOUND_NOTIFICATIONS=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VITE_DEV_SERVER_PORT=3001
VITE_DEV_SERVER_HOST=localhost
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCE_MAPS=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
VITE_BUILD_OUTPUT_DIR=dist
VITE_BUILD_ASSETS_DIR=assets
VITE_BUILD_SOURCE_MAP=false
VITE_BUILD_MINIFY=true

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=
VITE_AMPLITUDE_API_KEY=

# =============================================================================
# ERROR REPORTING CONFIGURATION
# =============================================================================
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_ENABLE_ERROR_REPORTING=false

# =============================================================================
# CUSTOMIZATION CONFIGURATION
# =============================================================================
VITE_COMPANY_NAME=iUtility
VITE_COMPANY_LOGO=/logo.png
VITE_FAVICON=/favicon.ico
VITE_PRIMARY_COLOR=#3B82F6
VITE_SECONDARY_COLOR=#8B5CF6 